<?xml version="1.0"?>
<odoo>
    <!-- Report Time Pack Summary  -->
    <report
        id="tsm_time_pack_report_summary_action"
        name="tsm_time_pack.tsm_time_pack_report_summary_document"
        model="tsm.time.pack"
        string="Print Time Pack Summary"
        print_report_name="object.name and '%s-%s' % (object.code, object.name) or object.code"
        report_type="qweb-pdf"
        paperformat="tsm_base.tsm_paper_format_report"/>

    <template id="tsm_time_pack_report_summary_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="tsm_base.tsm_report_layout">
                    <div class="page">
                        <div class="row" name="head_report">
                            <table class="table table-bordered table-condensed" style="margin-top:0px;">
                                <tr>
                                    <td>Client:</td>
                                    <td><span t-field="o.partner_id"/></td>
                                    <td>Phone:</td>
                                    <td>
                                        <span t-field="o.partner_id.phone"/> /
                                        <span t-field="o.partner_id.mobile"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Address:</td>
                                    <td>
                                        <span t-field="o.partner_id.street"/>
                                        <span t-field="o.partner_id.street2"/>
                                        <p>
                                        <span t-field="o.partner_id.zip"/> -
                                        <span t-field="o.partner_id.city"/> -
                                        <span t-field="o.partner_id.state_id"/>
                                        </p>
                                    </td>
                                    <td>@mail:</td>
                                    <td><span t-field="o.partner_id.email"/></td>
                                </tr>
                            </table>
                            <table class="table table-condensed" style="margin-top:30px;margin-bottom:-5px;">
                                <tr>
                                    <td>
                                        Date Start: <span t-field="o.date_start"/>
                                    </td>
                                    <td class="text-right">
                                        Responsible: <span t-field="o.user_id.name"/>
                                    </td>
                                </tr>
                            </table>
                            <div class="well well-sm text-center">
                                <h1>Sumary Time Pack: <span t-field="o.code"/></h1>
                                <span t-field="o.name"/>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-xs-5">
                                <table class="table table-condensed">
                                    <tr>
                                        <td>Contrated:</td>
                                        <td class="text-right">
                                            <!--<span t-esc="'{0:,.0f}'.format(o.contrated_hours)"/> horas-->
                                            <span t-field="o.contrated_hours" t-field-options='{"widget": "float_time"}'/> hours
                                        </td>
                                    </tr>

                                    <tr class="danger">
                                        <td>Consumed&#160;<span class="fa fa-arrow-circle-down text-danger"/>&#160;:</td>
                                        <td class="text-right">
                                            <span t-field="o.consumed_hours" t-field-options='{"widget": "float_time"}'/> hours
                                        </td>
                                    </tr>
                                    <tr class="border-black">
                                        <td>Remainig:</td>
                                        <td class="text-right">
                                            <span t-field="o.remaining_hours" t-field-options='{"widget": "float_time"}'/> hours
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-xs-5">
                                <table t-if="o.complimentary_hours" class="table table-condensed">
                                    <tr>
                                        <td>Complimentary&#160;<span class="fa fa-arrow-circle-right"/>&#160;:</td>
                                        <td class="text-right">
                                            <span t-field="o.complimentary_hours" t-field-options='{"widget": "duration", "unit": "hour", "round": "minute"}'/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2" style="font-size:0.6em;">
                                            <b>Complimentary time</b> is time used by the technician but
                                            doesn't discount time of the hours contracted by the client..
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <div class="row" t-if="len(o.timesheet_ids) > 0">
                            <table class="table table-condensed table-striped">
                                <thead style="background-color: #3498DB;font-size:0.8em;" >
                                    <tr class="text-center">
                                        <th colspan="5" class="text-center" style="color:#fff;">Detail Time spent</th>
                                    </tr>
                                 </thead>
                                <tbody>
                                    <tr t-foreach="o.timesheet_ids.sorted(key=lambda b: b.date_time)" t-as="t" >
                                        <td style="font-size:0.7em;">
                                            <span t-field="t.date_time"
                                                  t-options="{'format': 'dd/MM/yyyy - HH:mm'}"/>
                                        </td>
                                        <td style="font-size:0.7em;">
                                            <span t-field="t.task_id"/>
                                        </td>
                                        <td style="font-size:0.7em;">
                                            <span t-field="t.name"/>
                                        </td>
                                        <td style="font-size:0.7em;" class="text-right">
                                            <span t-field="t.amount"
                                                  t-field-options='{"widget": "duration", "unit": "hour", "round": "minute"}'/>
                                        </td>
                                        <td style="font-size:0.7em;" class="text-right">
                                            <span t-field="t.timepack_id.code"/>
                                            <span t-if="t.discount_time == True">
                                                <span class="fa fa-2x fa-arrow-circle-down text-danger"/>
                                            </span>
                                            <span t-if="t.discount_time == False">
                                                <span class="fa fa-2x fa-arrow-circle-right"/>
                                            </span>
                                        </td>
                                    </tr>
                                </tbody>
                                <tfoot style="font-size:0.8em;">
                                    <tr>
                                        <th style="font-weight: normal;font-size:0.6em;">
                                            <span class="fa fa-arrow-circle-down text-danger"/>&#160;Discounts Time &#160;&#160;&#160;
                                            <span class="fa fa-arrow-circle-right"/>&#160;Complimentary time
                                        </th>
                                        <th colspan="3" class="text-right">
                                            <span t-field="o.total_hours_spent"
                                                  t-field-options='{"widget": "duration", "unit": "hour", "round": "minute"}'/>
                                        </th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>

                    </div>
                </t>
            </t>
        </t>
    </template>

    <!-- Report Time Pack Detailed  -->
    <report
        id="tsm_time_pack_report_detailed_action"
        name="tsm_time_pack.tsm_time_pack_report_detailed_document"
        model="tsm.time.pack"
        string="Print Time Pack Detailed"
        print_report_name="object.name and '%s-%s' % (object.code, object.name) or object.code"
        report_type="qweb-pdf"
        paperformat="tsm_base.tsm_paper_format_report"/>

    <template id="tsm_time_pack_report_detailed_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="tsm_base.tsm_report_layout">
                    <div class="page">
                        <div class="row" name="head_report">
                            <table class="table table-bordered table-condensed" style="margin-top:0px;">
                                <tr>
                                    <td>Client:</td>
                                    <td><span t-field="o.partner_id"/></td>
                                    <td>Phone:</td>
                                    <td>
                                        <span t-field="o.partner_id.phone"/> /
                                        <span t-field="o.partner_id.mobile"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Address:</td>
                                    <td>
                                        <span t-field="o.partner_id.street"/>
                                        <span t-field="o.partner_id.street2"/>
                                        <p>
                                        <span t-field="o.partner_id.zip"/> -
                                        <span t-field="o.partner_id.city"/> -
                                        <span t-field="o.partner_id.state_id"/>
                                        </p>
                                    </td>
                                    <td>@mail:</td>
                                    <td><span t-field="o.partner_id.email"/></td>
                                </tr>
                            </table>
                            <table class="table table-condensed" style="margin-top:30px;margin-bottom:-5px;">
                                <tr>
                                    <td>
                                        Date Start: <span t-field="o.date_start"/>
                                    </td>
                                    <td class="text-right">
                                        Responsible: <span t-field="o.user_id.name"/>
                                    </td>
                                </tr>
                            </table>
                            <div class="well well-sm text-center">
                                <h1>Sumary Time Pack: <span t-field="o.code"/></h1>
                                <span t-field="o.name"/>
                            </div>
                        </div>

                        <div class="row" style="margin-top:30px;">
                            <div class="col-xs-5">
                                <table class="table table-condensed">
                                    <tr>
                                        <td>Contrated:</td>
                                        <td class="text-right">
                                            <!--<span t-esc="'{0:,.0f}'.format(o.contrated_hours)"/> horas-->
                                            <span t-field="o.contrated_hours" t-field-options='{"widget": "float_time"}'/> hours
                                        </td>
                                    </tr>

                                    <tr class="danger">
                                        <td>Consumed&#160;<span class="fa fa-arrow-circle-down text-danger"/>&#160;:</td>
                                        <td class="text-right">
                                            <span t-field="o.consumed_hours" t-field-options='{"widget": "float_time"}'/> hours
                                        </td>
                                    </tr>
                                    <tr class="border-black">
                                        <td>Remaining:</td>
                                        <td class="text-right">
                                            <span t-field="o.remaining_hours" t-field-options='{"widget": "float_time"}'/> hours
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-xs-5">
                                <table t-if="o.complimentary_hours" class="table table-condensed">
                                    <tr>
                                        <td>Complimentary&#160;<span class="fa fa-arrow-circle-right"/>&#160;:</td>
                                        <td class="text-right">
                                            <span t-field="o.complimentary_hours" t-field-options='{"widget": "duration", "unit": "hour", "round": "minute"}'/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2" style="font-size:0.6em;">
                                            <b>Complimentary time</b> is time used by the technician but
                                            doesn't discount time of the hours contracted by the client..
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <!--Timesheets list in time pack-->
                        <div class="row" t-if="len(o.timesheet_ids) > 0">
                            <table class="table table-condensed table-striped">
                                <thead style="background-color: #3498DB;font-size:0.8em;" >
                                    <tr class="text-center">
                                        <th colspan="5" class="text-center" style="color:#fff;">Detail Time spent</th>
                                    </tr>
                                 </thead>
                                <tbody>
                                    <tr t-foreach="o.timesheet_ids.sorted(key=lambda b: b.date_time)" t-as="t" >
                                        <td style="font-size:0.7em;">
                                            <span t-field="t.date_time"
                                                  t-options="{'format': 'dd/MM/yyyy - HH:mm'}"/>
                                        </td>
                                        <td style="font-size:0.7em;">
                                            <span t-field="t.task_id"/>
                                        </td>
                                        <td style="font-size:0.7em;">
                                            <span t-field="t.name"/>
                                        </td>
                                        <td style="font-size:0.7em;" class="text-right">
                                            <span t-field="t.amount"
                                                  t-field-options='{"widget": "duration", "unit": "hour", "round": "minute"}'/>
                                        </td>
                                        <td style="font-size:0.7em;" class="text-right">
                                            <span t-field="t.timepack_id.code"/>
                                            <span t-if="t.discount_time == True">
                                                <span class="fa fa-2x fa-arrow-circle-down text-danger"/>
                                            </span>
                                            <span t-if="t.discount_time == False">
                                                <span class="fa fa-2x fa-arrow-circle-right"/>
                                            </span>
                                        </td>
                                    </tr>
                                </tbody>
                                <tfoot style="font-size:0.8em;">
                                    <tr>
                                        <th style="font-weight: normal;font-size:0.6em;">
                                            <span class="fa fa-arrow-circle-down text-danger"/>&#160;Discounts Time &#160;&#160;&#160;
                                            <span class="fa fa-arrow-circle-right"/>&#160;Complimentary time
                                        </th>
                                        <th colspan="3" class="text-right">
                                            <span t-field="o.total_hours_spent"
                                                  t-field-options='{"widget": "duration", "unit": "hour", "round": "minute"}'/>
                                        </th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <!--/Timesheets list-->
                        <p style="page-break-after:always;"></p>
                        <!-- Taks in Time Pack-->
                        <t t-set="timesheet_tasks" t-value="[]"/>
                        <t t-set="timesheet_sorted" t-value="[]"/>
                        <t t-foreach="o.timesheet_ids.sorted(key=lambda b: b.task_id.code)" t-as="tt">
                            <t t-set="timesheet_tasks" t-value="timesheet_tasks+[tt.task_id]"/>
                        </t>
                        <!--<t t-esc="timesheet_tasks"/><br/>-->
                        <!-- This function delete duplicates -->
                        <t t-set="timesheet_tasks" t-value="list(dict.fromkeys(timesheet_tasks))"/>

                        <div class="row" t-if="len(timesheet_tasks) > 0">
                            <t t-foreach="timesheet_tasks" t-as="task">
                                <!-- Print Task -->
                                <table class="table table-condensed">
                                    <tr class="success">
                                        <td>
                                            Task: <span t-field="task.code"/> -
                                            <span t-field="task.name"/>
                                        </td>
                                        <td>
                                            Date: <span t-field="task.date_start"/>
                                        </td>
                                        <td>
                                            Responsible: <span t-field="task.user_id.name"/>
                                        </td>
                                    </tr>
                                </table>
                                <span t-field="task.description"/>
                                <!-- /Print Task -->
                                <!-- Timesheets of the task -->
                                <t t-set="total" t-value="0" />
                                <table class="table table-condensed table-striped">
                                    <thead style="background-color: #3498DB;font-size:0.8em;" >
                                        <tr>
                                            <th colspan="5" class="text-center" style="color:#fff;">Detail spent time</th>
                                        </tr>
                                     </thead>
                                    <tbody>
                                        <tr t-foreach="o.timesheet_ids.sorted(key=lambda b: b.date_time)" t-as="t" >
                                        <t t-if="task.id==t.task_id.id">
                                            <t t-set="total" t-value="total+t.amount"/>
                                            <td style="font-size:0.7em;">
                                                <span t-field="t.date_time"
                                                      t-options="{'format': 'dd/MM/yyyy - HH:mm'}"/>
                                            </td>
                                            <td style="font-size:0.7em;">
                                                <span t-field="t.task_id"/>
                                            </td>
                                            <td style="font-size:0.7em;">
                                                <span t-field="t.name"/>
                                            </td>
                                            <td style="font-size:0.7em;" class="text-right">
                                                <span t-field="t.amount"
                                                      t-field-options='{"widget": "duration", "unit": "hour", "round": "minute"}'/>
                                            </td>
                                            <td style="font-size:0.7em;" class="text-right">
                                                <span t-field="t.timepack_id.code"/>
                                                <span t-if="t.discount_time == True">
                                                    <span class="fa fa-2x fa-arrow-circle-down text-danger"/>
                                                </span>
                                                <span t-if="t.discount_time == False">
                                                    <span class="fa fa-2x fa-arrow-circle-right"/>
                                                </span>
                                            </td>
                                        </t>
                                        </tr>
                                    </tbody>
                                    <tfoot style="font-size:0.8em;">
                                        <tr>
                                            <th colspan="4" class="text-right">
                                                <t t-esc="total" t-esc-options='{"widget": "duration", "unit": "hour", "round": "minute"}'/>
                                            </th>
                                        </tr>
                                    </tfoot>
                                </table>
                                <!-- /Timesheet of the task -->
                            <p style="page-break-after:always;"></p>
                            </t>
                        </div>
                        <!-- /Tareas -->
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>