<?xml version="1.0"?>
<odoo>
    <data>
        <record id="tsm_time_pack_sale_order_form_view" model="ir.ui.view">
            <field name="name">TSM Time Pack tsm.time.pack.sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='client_order_ref']" position="after">
                    <field  name="tsm_time_pack_id" readonly="1" attrs="{'invisible': [('tsm_time_pack_id', '=', False)]}"/>
                </xpath>
           </field>
        </record>
    </data>
</odoo>