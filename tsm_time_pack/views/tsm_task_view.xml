<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="tsm_task_form_time_pack_view" model="ir.ui.view">
            <field name="name">TSM Time Pack tsm.task.form</field>
            <field name="model">tsm.task</field>
            <field name="inherit_id" ref="tsm_task_timesheet.tsm_task_form_timesheet_view" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='timesheet_ids']//field[@name='project_id']" position="after">
                    <field name="timepack_id" domain="[('partner_id', '=', parent.partner_id)]" options="{'no_create': True}"/>
                    <field name="discount_time" attrs="{'invisible':[('timepack_id','=',False)]}"/>
                </xpath>
            </field>
        </record>

        <record id="tsm_task_timesheet_line_tree_time_pack_view" model="ir.ui.view">
            <field name="name">TSM Task Tmesheet Line Tree Time Pack</field>
            <field name="model">tsm.task.timesheet</field>
            <field name="inherit_id" ref="tsm_task_timesheet.tsm_task_timesheet_line_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='task_id']" position="after">
                    <field name="task_partner_id" invisible="1"/>
                    <field name="timepack_id" domain="[('partner_id', '=', task_partner_id)]" options="{'no_create': True}"/>
                    <field name="discount_time" attrs="{'invisible':[('timepack_id','=',False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>