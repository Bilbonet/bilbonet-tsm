<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record model="ir.ui.view" id="tsm_task_code_form_view">
        <field name="name">TSM task.code.form</field>
        <field name="model">tsm.task</field>
        <field name="inherit_id" ref="tsm_base.tsm_task_form_view"/>
        <field name="arch" type="xml">
            <field name="name" position="before">
                <field name="code" class="oe_inline"/>
                <label string=" - " class="oe_inline"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="tsm_task_code_tree_view">
        <field name="name">TSM task.code.tree</field>
        <field name="model">tsm.task</field>
        <field name="inherit_id" ref="tsm_base.tsm_task_tree_view"/>
        <field name="arch" type="xml">
            <field name="name" position="before">
                <field name="code"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="tsm_task_code_kanban_view">
        <field name="name">TSM task.code.kanban</field>
        <field name="model">tsm.task</field>
        <field name="inherit_id" ref="tsm_base.tsm_task_kanban_view"/>
        <field name="arch" type="xml">
            <field name="name" position="before">
                <field name="code"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="tsm_task_code_search_view">
        <field name="name">TSM task.code.search</field>
        <field name="model">tsm.task</field>
        <field name="inherit_id" ref="tsm_base.tsm_task_search_view"/>
        <field name="arch" type="xml">
            <field name="name" position="attributes">
                <attribute name="filter_domain">['|', ('name', 'ilike', self),
                    ('code', 'ilike', self)]
                </attribute>
            </field>
        </field>
    </record>
</odoo>

