<odoo>

    <record id="tsm_project_email_template" model="mail.template">
        <field name="name">TSM Project - Send by Email</field>
        <field name="model_id" ref="tsm_base.model_tsm_project"/>
        <field name="subject">Project: {{object.name or 'n/a'}}</field>
        <field name="email_from">{{ (object.user_id.email_formatted or object.company_id.email_formatted or user.email_formatted) }}</field>
        <field name="partner_to">{{ object.partner_id.id }}</field>
        <field name="report_template" ref="tsm_base.tsm_project_report_action"/>
        <field name="report_name">{{ (object.name or '').replace(' ', '-') }}</field>
        <field name="lang">{{ object.partner_id.lang }}</field>
        <field name="auto_delete" eval="True"/>
        <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px;">
    <p style="box-sizing:border-box;margin: 0px; padding: 0px; font-size: 13px;">
        Hello, <span style="font-weight: bold;" t-out="object.partner_id.name or ''"></span>
        <br/><br/>
        We inform you about the following task: 
    </p>
    <p style="border-left: 4px solid #f2f2f2; margin-left: 30px;padding-left:15px;">
       Project Title: <span style="font-weight: bold;" t-out="object.name or ''"></span><br/>
       Project Start: <span style="font-weight: bold;" t-out="object.date_start or ''" t-options="{'widget': 'date'}"></span><br/>
       Your contact: <span style="font-weight: bold;" t-out="object.user_id.name or ''"></span>
    </p>
    <p>
        If you have any question, do not hesitate to contact us.<br/>
        Thank you for trusting in us!
    </p>
    <t t-if="not is_html_empty(object.user_id.signature)">
        <br/>
        <t t-out="object.user_id.signature or ''">--<br/>Bilbonet</t>
    </t>
</div>        
        </field>
    </record>

</odoo>