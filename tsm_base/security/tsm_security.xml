<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- User Option: Application Permissions -->
    <record model="ir.module.category" id="module_tsm">
        <field name="name">T.S.M</field>
        <field name="description">Technical Support Management helps you manage your technical support</field>
        <field name="sequence">3</field>
    </record>

    <!-- Security Groups -->
    <record id="group_tsm_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="tsm_base.module_tsm"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>
    <record id="group_tsm_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="tsm_base.module_tsm"/>
        <field name="implied_ids" eval="[(4, ref('group_tsm_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root'))]"/>
    </record>

    <data noupdate="1">


        <!-- ============= -->
        <!-- Project Rules -->
        <!-- ============= -->
        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4,ref('tsm_base.group_tsm_manager'))]"/>
        </record>
        <!-- Manager see all -->
        <record model="ir.rule" id="tsm_project_manager_rule">
            <field name="name">TSM Project: manager see all</field>
            <field name="model_id" ref="model_tsm_project"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('tsm_base.group_tsm_manager'))]"/>
        </record>

        <record model="ir.rule" id="tsm_project_public_members_rule">
            <field name="name">TSM Project: employees: following required for follower-only projects</field>
            <field name="model_id" ref="model_tsm_project"/>
            <field name="domain_force">['|',
                ('privacy_visibility', '!=', 'followers'),
                ('message_partner_ids', 'in', [user.partner_id.id])]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <!-- Only Managers of the project can modify -->
        <record model="ir.rule" id="tsm_project_modify_only_managers">
            <field name="name">TSM Project: Modify only managers</field>
            <field name="model_id" ref="model_tsm_project"/>
            <field name="domain_force">[('user_id','=',user.id)]</field>
            <field name="perm_read" eval="False"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>



        <!-- =========== -->
        <!-- Tasks Rules -->
        <!-- =========== -->
         <!-- Manager see all -->
        <record model="ir.rule" id="tsm_project_task_manager_rule">
            <field name="name">TSM Task: manager see all</field>
            <field name="model_id" ref="model_tsm_task"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('tsm_base.group_tsm_manager'))]"/>
        </record>

        <record model="ir.rule" id="tsm_project_task_public_members_rule">
            <field name="name">TSM Task: employees: following required for follower-only tasks</field>
            <field name="model_id" ref="model_tsm_task"/>
            <field name="domain_force">['|',
                ('privacy_visibility', '!=', 'followers'),
                ('message_partner_ids', 'in', [user.partner_id.id])
                ]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>


    </data>

</odoo>