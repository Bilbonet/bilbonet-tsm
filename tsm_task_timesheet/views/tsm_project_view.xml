<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="tsm_project_form_view" model="ir.ui.view">
            <field name="name">Inherit project form : Timesheet</field>
            <field name="model">tsm.project</field>
            <field name="inherit_id" ref="tsm_base.tsm_project_form_view"/>
            <field name="priority">24</field>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_title')]" position="after">
                    <div>
                        <field name="allow_timesheets" class="oe_inline" string="Allow timesheets"/>
                        <label for="allow_timesheets"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
