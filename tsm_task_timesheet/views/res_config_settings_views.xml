<?xml version="1.0"?>
<odoo>
    <record id="view_res_config_settings" model="ir.ui.view">
        <field name="name">TSM Task Timesheet Settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="tsm_base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div data-key="tsm" position="inside">
                <h2>TSM Timesheet Settings</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box" title="Use tags in timesheet">
                        <div class="o_setting_left_pane">
                            <field name="group_tsm_timesheet_title"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="group_tsm_timesheet_title"/>
                            <div class="text-muted">
                                Use title to describe timesheet.
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-12 col-md-6 o_setting_box" title="Use tags in timesheet">
                        <div class="o_setting_left_pane">
                            <field name="group_tsm_timesheet_tag"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="group_tsm_timesheet_tag"/>
                            <div class="text-muted">
                                Use tags to classify timesheet.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>